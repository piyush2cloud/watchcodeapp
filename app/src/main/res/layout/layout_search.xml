<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearchBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/search_box_bg"
        android:drawableStart="@drawable/ic_search_24"
        android:drawablePadding="5dp"
        android:hint="Search"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ivList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchBox"
        app:layout_constraintRight_toLeftOf="@+id/ivGrid"
        app:layout_constraintTop_toTopOf="@+id/etSearchBox"
        app:srcCompat="@drawable/ic_baseline_view_list_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tint="#7B7B7B"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchBox"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etSearchBox"
        app:srcCompat="@drawable/ic_dashboard_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>