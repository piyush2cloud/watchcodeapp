<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".demo.HomePendingLiveFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light_300"
        android:text="New event of thing video"
        android:textColor="#6A6A6A"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="250dp"
        android:src="@drawable/screenshot_thumb"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto_light_300"
        android:text="00:12:34"
        android:textColor="#2F78E5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivVideo"
        app:layout_constraintTop_toBottomOf="@+id/ivVideo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAwsm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Awesome Index"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tvImmersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvImmersion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Immersion Score"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAwsm"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:alpha=".28"
        android:src="@drawable/app_logo"
        app:layout_constraintEnd_toEndOf="@+id/tvAwsm"
        app:layout_constraintStart_toStartOf="@+id/tvAwsm"
        app:layout_constraintTop_toBottomOf="@+id/tvAwsm" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black_900"
        android:gravity="center"
        android:text="75"
        android:textColor="#191919"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
        app:layout_constraintEnd_toEndOf="@+id/ivLogo"
        app:layout_constraintStart_toStartOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="@+id/ivLogo"
        app:lineHeight="30dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black_900"
        android:gravity="center"
        android:text="4.56"
        android:textColor="#191919"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="@+id/tvImmersion"
        app:layout_constraintStart_toStartOf="@+id/tvImmersion"
        app:layout_constraintTop_toBottomOf="@+id/tvImmersion"
        app:lineHeight="30dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>